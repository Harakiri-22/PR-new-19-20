<Window x:Class="data2.Авторизация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:data2"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="t1" HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="t2" HorizontalAlignment="Center" Margin="0,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пользователь" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="b1" Content="Войти" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="120" Click="b1_Click"/>
        <Button x:Name="b2" Content="Отмена" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Width="120" Click="b2_Click"/>

    </Grid>
</Window>
